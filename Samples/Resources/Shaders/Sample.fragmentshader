#version 330 core
//in vec3 vertexColor; // The input variable from the vertex shader (same name and same type)
  
out vec4 color;
uniform vec4 input_color;
uniform float transparency;

uniform sampler2D diffuse_tex;

void main()
{
	vec2 TexCoord;
	TexCoord.x = 0;
	TexCoord.y = 0;
	color = mix(texture(diffuse_tex, TexCoord), texture(diffuse_tex, TexCoord), 0.2);
	// color = vec4(input_color.xyz, transparency);
} 